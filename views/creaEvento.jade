        link(rel='stylesheet', href='stylesheets/bootstrap.css')
        link(rel='stylesheet', href='stylesheets/editor.dataTables.min.css')
        link(rel='stylesheet', href='stylesheets/jquery.dataTables.min.css')
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.9.0/moment-with-locales.js')
        script(src='https://cdn.rawgit.com/Eonasdan/bootstrap-datetimepicker/master/build/js/bootstrap-datetimepicker.min.js')
        script(src='javascripts/datatables.min.js')
        script(src='javascripts/dataTables.editor.min.js')
        script(src='javascripts/dataTables.buttons.min.js')



    body(style='padding-top: 75px;')
        block myNav
        nav.navbar.navbar-default.navbar-fixed-top
            .container-fluid
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    img.navbar-brand(src='images/medici.png', alt='Company Logo', width='50', height='50')
                    a.navbar-brand(href='/home') Ordine Medici Caserta Notifications
                #navbar.navbar-collapse.collapse
                    ul.nav.navbar-nav
                        li
                            a(href='/aggiungiContatto') Aggiungi Medico
                        li.dropdown.active
                            a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                                | Gestione Eventi
                                span.caret
                            ul.dropdown-menu
                                li.active
                                    a(href='/creaEvento') Creazione Evento
                                li.divider(role='separator')
                                li
                                    a(href='/modificaEvento') Modifica Evento
                        li.dropdown
                            a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                                | Gestione Invii
                                span.caret
                            ul.dropdown-menu
                                li
                                    a(href='/assegnaEvento') Notifica via App
                                li.divider(role='separator')
                                li
                                    a(href='/') Notifica via SMS
                                li.divider(role='separator')
                                li
                                    a(href='/gestioneEmail') Notifica via E-mail
                        li.dropdown
                            a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                                | Gestione Notifiche
                                span.caret
                            ul.dropdown-menu
                                li
                                    a(href='/gestioneNotifiche') Tabulato Invii App
                                li.divider(role='separator')
                                li
                                    a(href='/gestioneApp') Tabulato App Scaricate
                                li.divider(role='separator')
                                li
                                    a(href='/') Tabulato Invii SMS
                                li.divider(role='separator')
                                li
                                    a(href='/tabEmail') Tabulato Invii E-mail
                    ul.nav.navbar-nav.navbar-right
                        li.active
                            a(href='/logout') Logout
        block myContainer
        .container-fluid

            .jumbotron
                .row
                    h1 Creazione Evento

            #myModal.modal.fade
                .modal-dialog
                    .modal-content
                        // dialog body
                        .modal-body
                            button.close(type='button', data-dismiss='modal') ×
                            h1 Creazione Effettuata con Successo!
                        // dialog buttons
                        .modal-footer

            #myModal1.modal.fade
                .modal-dialog
                    .modal-content
                        // dialog body
                        .modal-body
                            button.close(type='button', data-dismiss='modal') ×
                            h1 Inserire tutti i campi!
                        // dialog buttons
                        .modal-footer

            .row
                .col-sm-12
                    // Titolo evento
                    .row
                        .col-sm-12.form-group
                            label.cols-sm-2.control-label(for='titoloEvento') Titolo Evento
                            .cols-sm-10
                                .input-group
                                    span.input-group-addon
                                        i.fa.fa-briefcase(aria-hidden='true')
                                    input#titoloEvento.form-control(type='text', placeholder='Titolo evento')
                    // Sottotitolo
                    .row
                        .col-sm-12.form-group
                            label.cols-sm-2.control-label(for='sottotitoloEvento') Sottotitolo Evento
                            .cols-sm-10
                                .input-group
                                    span.input-group-addon
                                        i.fa.fa-briefcase(aria-hidden='true')
                                    input#sottotitoloEvento.form-control(type='text', placeholder='Sottotitolo evento')
                    .row
                        // Data Evento inizio
                        .col-sm-4.form-group
                            label.cols-sm-2.control-label(for='dataEvento')
                                | Dal giorno:
                            #datetimepicker1.input-group.date
                                span.input-group-addon
                                    i.fa.fa-calendar(aria-hidden='true')
                                input#dataEvento.form-control(type='text')
                        // Data Evento fine
                        .col-sm-4.form-group
                            label.cols-sm-2.control-label(for='dataEvento')
                                | Al giorno:
                            #datetimepicker2.input-group.date
                                span.input-group-addon
                                    i.fa.fa-calendar(aria-hidden='true')
                                input#dataEventoFine.form-control(type='text')
                        // Luogo Evento
                        .col-sm-4.form-group
                            label.cols-sm-2.control-label(for='luogoEvento') Luogo Evento
                            .cols-sm-10
                                .input-group
                                    span.input-group-addon
                                        i.fa.fa-map-marker(aria-hidden='true')
                                    input#luogoEvento.form-control(type='text', placeholder='Luogo evento')
                    .row
                        // Informazioni evento
                        .col-sm-6.form-group
                            label.cols-sm-2.control-label(for='informazioniEvento') Informazioni Evento (CFU, note, ecc.):
                            textarea#informazioniEvento.form-control(rows='1', maxlength='500')
                        // Relatori evento
                        .col-sm-6.form-group
                            label.cols-sm-2.control-label(for='relatoriEvento') Relatori Evento:
                            textarea#relatoriEvento.form-control(rows='1', maxlength='500')
                    .row
                        // Descrizione evento
                        .col-sm-12.form-group
                            label.cols-sm-2.control-label(for='descrizioneEvento') Descrizione Evento:
                            textarea#descrizioneEvento.form-control(rows='1', maxlength='2000')
                    // Carica immagini evento da pc
                    .row
                        .col-sm-6
                            label.cols-sm-2.control-label(for='caricaFoto') Carica Immagine da PC
                            .input-group.input-file()
                                span.input-group-addon
                                    i.fa.fa-file-image-o.fa(aria-hidden='true')
                                span.input-group-btn
                                    button.btn.btn-warning.btn-choose(type='button') Seleziona
                                input#caricaFoto.form-control(type='text', placeholder='Carica immagini da PC...')
                                span.input-group-btn
                                    button.btn.btn-warning.btn-reset(type='button') Reset
            br
            .container-fluid
                button.btn.btn-warning.btn-lg.pull-right(onclick='salvaDati();') Crea

        br
        br
        br
        nav.navbar.navbar-default.navbar-fixed-bottom
            .container-fluid
                br
                p.copyright.pull-right
                    | © 2017 Ordine Medici Caserta Notifications -
                    a(href='http://www.ak12srl.it/')  AK-12 srl &nbsp;
                    img(src='images/ak12.png', alt='Company Logo', width='40', height='20')
    block myScript
        script(src="javascripts/controllers/creaEventoController.js")