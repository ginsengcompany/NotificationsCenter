            main
                // MODAL MODIFICA INTERESSE
                #modalModificaInteressi.modal.fade(tabindex='-1', role='dialog', aria-labelledby='modalModificaInteressi', aria-hidden='true')
                    .modal-dialog(role='document')
                        .modal-content
                            // Content
                            .modal-header.text-center
                                h4.modal-title.w-100.font-weight-bold Modifica Interesse
                                button.close(type='button', data-dismiss='modal', aria-label='Chiudi')
                                    span(aria-hidden='true') ×
                            // Body
                            .modal-body.mx-3
                                .md-form.mb-5
                                    i.fa.fa-hashtag(aria-hidden='true')
                                    input#interesse.form-control.validate(type='text', name='interesse', placeholder='Interesse')
                                    label(data-error='wrong', data-success='right', for='interesse') Interesse
                                .md-form.mb-4
                                    i.fa.fa-server(aria-hidden='true')
                                    input#descrizione.form-control.validate(type='text', name='descrizione', placeholder='Descrizione')
                                    label(data-error='wrong', data-success='right', for='descrizione') Descrizione
                            .modal-footer.d-flex.justify-content-center
                                button.btn.btn-primary.btn-block(type='button', onclick='updateInteresse();') Salva

                // MODAL AGGIUNGI INTERESSE
                #modalAggiungiInteressi.modal.fade(tabindex='-1', role='dialog', aria-labelledby='modalAggiungiInteressi', aria-hidden='true')
                    .modal-dialog(role='document')
                        .modal-content
                            // Content
                            .modal-header.text-center
                                h4.modal-title.w-100.font-weight-bold Aggiungi Interesse
                                button.close(type='button', data-dismiss='modal', aria-label='Chiudi')
                                    span(aria-hidden='true') ×
                            // Body
                            .modal-body.mx-3
                                .md-form.mb-5
                                    i.fa.fa-hashtag(aria-hidden='true')
                                    input#interesse2.form-control.validate(type='text', name='interesse2', placeholder='Interesse')
                                    label(data-error='wrong', data-success='right', for='interesse2') Interesse
                                .md-form.mb-4
                                    i.fa.fa-server(aria-hidden='true')
                                    input#descrizione2.form-control.validate(type='text', name='descrizione2', placeholder='Descrizione')
                                    label(data-error='wrong', data-success='right', for='descrizione2') Descrizione
                            .modal-footer.d-flex.justify-content-center
                                button.btn.btn-primary.btn-block(type='button', onclick='addInteresse();') Salva

                .container-fluid.mt-5
                    // Jumbotron
                    .jumbotron
                        h1.h1-reponsive.mb-3.blue-text
                            strong Gestione Interessi
                    .row
                        .col-sm-2
                            button#AggiungiInteresse.btn.btn-primary.btn-lg(onclick='openModalAdd();') Aggiungi Interesse
                        .col-sm-2
                            button#modificaInteresse.btn.btn-primary.btn-lg(onclick='openModalUpdate();') Modifica Interesse
                        .col-sm-2
                            button#eliminaInteresse.btn.btn-primary.btn-lg(onclick='eliminaInteresse();') Elimina Interesse
                    br
                    .row
                        .col-sm-12.table-responsive
                            table#tabellaInteressi.table.table-striped.table-bordered(width='100%', cellspacing='0')
                                thead
                                    tr
                                        th id
                                        th Interesse
                                        th Descrizione
                    br

