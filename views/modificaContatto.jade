doctype html
html(lang='en')
    head
        title Notifications Center
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css')
        //link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
        link(rel='stylesheet', href='stylesheets/bootstrap.css')
        link(rel='stylesheet', href='stylesheets/jquery.dataTables.min.css')
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.9.0/moment-with-locales.js')
        script(src='https://cdn.rawgit.com/Eonasdan/bootstrap-datetimepicker/master/build/js/bootstrap-datetimepicker.min.js')
        script(src='javascripts/datatables.min.js')
        script(src='http://ajax.aspnetcdn.com/ajax/jquery.ui/1.12.1/jquery-ui.min.js', type='text/javascript')
        script(src='javascripts/dataTables.buttons.min.js')
        script(src='javascripts/dataTables.select.min.js')
    body(style='padding-top: 75px;')
        nav.navbar.navbar-default.navbar-fixed-top
            .container-fluid
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    img.navbar-brand(src='images/centerLogo.svg', alt='Company Logo', width='50', height='50')
                    a.navbar-brand(href='/home') Notifications Center
                #navbar.navbar-collapse.collapse
                    ul.nav.navbar-nav
                        li.dropdown
                            a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                                | Anagrafica
                                span.caret
                            ul.dropdown-menu
                                li
                                    a(href='/aggiungiContatto') Creazione
                                li.divider(role='separator')
                                li.active
                                    a(href='/modificaContatto') Modifica
                        li.dropdown
                            a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                                | Eventi
                                span.caret
                            ul.dropdown-menu
                                li
                                    a(href='/creaEvento') Creazione
                                li.divider(role='separator')
                                li
                                    a(href='/modificaEvento') Modifica
                        li.dropdown
                            a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                                | Gestione
                                span.caret
                            ul.dropdown-menu
                                li
                                    a(href='/assegnaEvento') Invio Notifiche
                                li.divider(role='separator')
                                li
                                    a(href='/gestioneNotifiche') Gestione Report
                    ul.nav.navbar-nav.navbar-right
                        li.active
                            a(href='/logout') Logout
        block myContainer
        .container-fluid
            .jumbotron
                .row
                    h1 Modifica Medico

            #myModal1.modal.fade
                .modal-dialog
                    .modal-content
                        // dialog body
                        .modal-header
                            button.close(type='button', data-dismiss='modal') ×
                            h2.modal-title Modifica Medico
                        .modal-body

                            .row
                                .col-sm-12
                                    .row
                                        .col-sm-6.form-group
                                            label.cols-sm-4.control-label(for='matricola') Matricola
                                                .cols-sm-10
                                                    .input-group
                                                        span.input-group-addon
                                                            i.fa.fa-list-ol(aria-hidden='true')
                                                        input#matricola.form-control(type='text', name='matricola', placeholder='Matricola')
                                        .col-sm-6.form-group
                                            label.cols-sm-2.control-label(for='specializzazione') Specializzazione
                                                .cols-sm-10
                                                    .input-group
                                                        span.input-group-addon
                                                            i.fa.fa-user-md(aria-hidden='true')
                                                        input#specializzazione.form-control(type='text', name='specializzazione', placeholder='Specializzazione')
                                    .row
                                        .col-sm-6.form-group
                                            label.cols-sm-2.control-label(for='nome') Nome
                                                .cols-sm-10
                                                    .input-group
                                                        span.input-group-addon
                                                            i.fa.fa-user(aria-hidden='true')
                                                        input#nome.form-control(type='text', name='nome', placeholder='Nome')
                                        .col-sm-6.form-group
                                            label.cols-sm-2.control-label(for='cognome') Cognome
                                                .cols-sm-10
                                                    .input-group
                                                        span.input-group-addon
                                                            i.fa.fa-user(aria-hidden='true')
                                                        input#cognome.form-control(type='text', name='cognome', placeholder='cognome')
                                    .row
                                        .col-sm-6.form-group
                                            label.cols-sm-2.control-label(for='provincia') Residenza
                                                .cols-sm-10
                                                    .input-group
                                                        span.input-group-addon
                                                            i.fa.fa-map-marker(aria-hidden='true')
                                                        input#provincia.form-control(type='text', name='provincia', placeholder='residenza')
                                        .col-sm-6.form-group
                                            label.cols-sm-4.control-label(for='mail') Mail
                                                .cols-sm-10
                                                    .input-group
                                                        span.input-group-addon
                                                            i.fa.fa-envelope-o(aria-hidden='true')
                                                        input#mail.form-control(type='text', name='mail', placeholder='e-mail')
                                    .row
                                        .col-sm-6.form-group
                                            label.cols-sm-2.control-label(for='telefono') Numero di Telefono
                                                .cols-sm-10
                                                    .input-group
                                                        span.input-group-addon
                                                            i.fa.fa-phone(aria-hidden='true')
                                                        input#telefono.form-control(type='text', name='telefono', placeholder='Numero di Telefono')
                                        .col-sm-6.form-group
                                            label.cols-sm-4.control-label(for='pec') PEC
                                                .cols-sm-10
                                                    .input-group
                                                        span.input-group-addon
                                                            i.fa.fa-envelope-o(aria-hidden='true')
                                                        input#pec.form-control(type='text', name='pec', placeholder='posta elettronica certificata')
                        // dialog buttons
                        .modal-footer
                            button.btn.btn-default.btn-block(type='button', onclick='updateMedico();') Salva
            .row
                .col-sm-2
                    button#modificaMedico.btn.btn-default.btn-lg(onclick='openModal();') Modifica Medico
                .col-sm-2
                    button#eliminaMedico.btn.btn-default.btn-lg(onclick='eliminaMedico();') Elimina Medico
            br
            .row
                .col-sm-12.table-responsive
                    table#tabellaMedici.table.table-striped.table-bordered(width='100%', cellspacing='0')
                        thead
                            tr
                                th id
                                th Matricola
                                th Cognome
                                th Nome
                                th Specializzazione
                                th Residenza
                                th Mail
                                th Numero Telefono
                                th PEC

            br
            br
            br
        nav.navbar.navbar-default.navbar-fixed-bottom
            .container-fluid
                br
                p.copyright.pull-right
                    | © 2018 Notifications Center -
                    a(href='http://www.ak12srl.it/')  AK-12 srl &nbsp;
                    img(src='images/ak12.png', alt='Company Logo', width='40', height='20')
            block myScript
                script(src="javascripts/controllers/modificaContattoController.js")